<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="High Score:"
        android:id="@+id/text_label_high_score"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_easy"
        android:layout_alignStart="@+id/button_easy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/text_high_score"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_label_high_score"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Results"
        android:id="@+id/text_label_results"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/text_high_score"
        android:layout_alignLeft="@+id/text_label_high_score"
        android:layout_alignStart="@+id/text_label_high_score" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="---"
        android:gravity="left"
        android:id="@+id/text_results_easy"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/text_label_results"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="---"
        android:gravity="left"
        android:id="@+id/text_results_normal"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/text_results_easy"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="---"
        android:gravity="left"
        android:id="@+id/text_results_hard"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/text_results_normal"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="---"
        android:gravity="left"
        android:id="@+id/text_results_super_hard"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/text_results_hard"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Easy(2x2)"
        android:id="@+id/button_easy"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Normal(3x3)"
        android:id="@+id/button_normal"
        android:layout_marginTop="51dp"
        android:layout_alignTop="@+id/button_easy"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Hard(4x4)"
        android:id="@+id/button_hard"
        android:layout_below="@+id/button_normal"
        android:layout_alignLeft="@+id/button_easy"
        android:layout_alignStart="@+id/button_easy"
        android:layout_weight="1"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Super Hard(5x5)"
        android:id="@+id/button_super_hard"
        android:layout_below="@+id/button_hard"
        android:layout_alignLeft="@+id/button_easy"
        android:layout_alignStart="@+id/button_easy"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World Ranking"
        android:id="@+id/button_world_ranking"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
